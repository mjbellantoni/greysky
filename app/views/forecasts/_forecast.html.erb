<section class="text-center my-5">
  <h1 class="mb-0"><%= forecast.city %></h1>
  <h1 id="current_temp", class="display-1 fw-lighter mt-0"><%= format_nil_as_dashes(forecast.current_temp) %>&deg;</h1>
  <p class="lead mb-0"><%= format_nil_as_dashes(forecast.current_weather) %></p>
  <p class="lead">H:<%= format_nil_as_dashes(forecast.high_temp) %>&deg; L:<%= format_nil_as_dashes(forecast.low_temp) %>&deg;</p>
  <% if forecast.fetched? && !forecast.newly_fetched? %>
    <div class="alert alert-light text-center my-4" role="alert">
      <i>Forecast data was updated <%= time_ago_in_words(forecast.fetched_at) %> ago.</i>
    </div>
  <% end %>
</section>
<% if forecast.forecast_periods.present? %>
  <section class="my-4">
    <h5>7-day Forecast</h5>
    <table id="forecast_periods" class="table table-borderless my-4">
      <thead>
      <th></th>
      <th class="text-end">🌡️</th>
      <th class="text-end">🌧️</th>
      <th class="d-none d-md-block"></th>
      </thead>
      <tbody>
      <%= render forecast.forecast_periods %>
      </tbody>
    </table>
  </section>
<% end %>