<section class="text-center my-5">
  <h1 class="mb-0"><%= @forecast.city %></h1>
  <h1 id="current_temp", class="display-1 fw-lighter mt-0"><%= @forecast.current_temp %>&deg;</h1>
  <p class="lead mb-0"><%= @forecast.current_weather %></p>
  <p class="lead">H:<%= @forecast.high_temp %>&deg; L:<%= @forecast.low_temp %>&deg;</p>
</section>
<section class="my-4">
  <% unless @forecast.newly_fetched? %>
    <div class="alert alert-light text-center" role="alert">
      <i>Forecast data was updated <%= time_ago_in_words(@forecast.fetched_at) %> ago.</i>
    </div>
  <% end %>
</section>
