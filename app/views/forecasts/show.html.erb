<h1><%= @forecast.city %></h1>
<ul>
  <li>Current: <%= @forecast.current_temp %>&deg;</li>
  <li>High: <%= @forecast.high_temp %>&deg;</li>
  <li>Low: <%= @forecast.low_temp %>&deg;</li>
  <li><%= @forecast.current_weather %></li>
</ul>
<section class="my-4">
  <% unless @forecast.newly_fetched? %>
    <div class="alert alert-light text-center" role="alert">
      <i>Forecast data was updated <%= time_ago_in_words(@forecast.fetched_at) %> ago.</i>
    </div>
  <% end %>
</section>
<section class="my-4">
  <h5>7-day Forecast</h5>
  <table id="forecast_periods" class="table table-borderless my-4">
    <thead>
      <th></th>
      <th class="text-end">🌡️</th>
      <th class="text-end">🌧️</th>
      <th class="d-none d-md-block"></th>
    </thead>
    <tbody>
    <%= render @forecast.forecast_periods %>
    </tbody>
  </table>
</section>
