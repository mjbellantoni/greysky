<% if @query.provided? && flash.key?(:alert) %>
  <div class="alert alert-danger">
    <span>The query <%= @query.errors.full_messages_for(:base).to_sentence %>.</span>
  </div>
<% end %>
  <%= form_tag("/", method: :get) do %>
  <%= text_field_tag(:q, params[:q], placeholder: "Search City or Zip Code") %>
  <%= submit_tag("Lookup") %>
<% end %>
